<Window x:Class="ExampleApplicationWpf.PluginManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plugin Manager" Height="367" Width="666">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ListBox SelectedIndex="0">
                <ListBoxItem>Installed</ListBoxItem>
                <ListBoxItem>Online</ListBoxItem>
                <ListBoxItem>Updates</ListBoxItem>
            </ListBox>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Margin="5" HorizontalAlignment="Right">
                <Button Padding="5 2 5 2" Click="Close">Close</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
